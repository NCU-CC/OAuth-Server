<%- if sign_in? %>
  <div class="container">
    <div class="row">
      <div class="col s12 m6 l6 xl6">
        <h4 class="center-align">
          <i class="material-icons left-icon">person</i>
          <a href="#end-user">
            <%= t('index.about.user.title') %>
            <i class="material-icons right-icon">arrow_forward</i>
          </a>
        </h4>
      </div>
      <div class="col s12 m6 l6 xl6">
        <h4 class="center-align">
          <i class="material-icons left-icon">memory</i>
          <a href="#developer">
            <%= t('index.about.developer.title') %>
            <i class="material-icons right-iron">arrow_forward</i>
          </a>
        </h4>
      </div>
    </div>
  </div>
  <div class="grey lighten-3">
    <div id="end-user" class="container">
      <div class="row">
        <div class="col s12 m6 l6 xl6">
          <h5><%= t('index.about.user.title') %></h5>
          <p><%= t('index.about.user.content') %></p>
        </div>
        <div class="col s12 m6 l6 xl6">
          <h5><%= t('index.problem.title') %></h5>
          <p><%= t('index.problem.content_html', slack: link_to('Slack', t('slack')), email: link_to('E-mail', t('email'))) %></p>
        </div>
      </div>
    </div>
  </div>
  <div id="developer" class="container">
    <div class="row">
      <div class="col s12 m6 l4 xl3">
        <h5><%= t('index.about.developer.title') %></h5>
        <p><%= t('index.about.developer.content_html', href: link_to(t('app_store'), t('app_store_link'))) %></p>
        <p><%= t('index.about.developer.sub_content_html', href: link_to(t('proposal'), t('proposal_link'))) %></p>
      </div>
      <div class="col s12 m6 l4 xl3">
        <h5><%= t('index.reference.title') %></h5>
        <p><%= t('index.reference.content_html', href: link_to(t('api'), t('api_link'))) %></p>
        <p><%= t('index.reference.sub_content_html', href: link_to(t('repo'), t('repo_link'))) %></p>
      </div>
      <div class="col s12 m6 l4 xl3">
        <h5><%= t('index.proposal.title') %></h5>
        <p><%= t('index.proposal.content_html', href: link_to(t('proposal'), t('proposal_link'))) %></p>
      </div>
      <div class="col s12 m6 l4 xl3">
        <h5><%= t('index.problem.title') %></h5>
        <p><%= t('index.problem.content_html', slack: link_to('Slack', t('slack')), email: link_to('E-mail', t('email'))) %></p>
      </div>
    </div>
  </div>
  <div class="orange lighten-5">
    <div class="container">
      <div class="row">
        <div class="col s12 m6 l4 xl4 orange lighten-5">
          <h5><%= t('index.api.title') %></h5>
          <p><%= t('index.api.content') %></p>
          <p><%= t('index.api.sub_content') %></p>
        </div>
        <div class="col s12 m6 l4 xl4 orange lighten-5">
          <h5><%= t('index.usage.title') %></h5>
          <p><%= t('index.usage.content_html', email: link_to('E-mail', t('email'))) %></p>
          <table>
            <tr>
              <th><%= t('index.usage.normal_th') %></th>
              <td><%= t('index.usage.normal_td') %></td>
            </tr>
            <tr>
              <th><%= t('index.usage.personnel_th') %></th>
              <td>
                <%= t('index.usage.personnel_td') %><br \>
                <span class="red-text"><%= t('index.usage.personnel_caution') %></span>
              </td>
            </tr>
          </table>
        </div>
        <div class="col s12 m6 l4 xl4 orange lighten-5">
          <h5><%= t('index.blacklist.title') %></h5>
          <p><%= t('index.blacklist.content') %></p>
        </div>
      </div>
    </div>
  </div>
<%- else %>
  <% content_for :menu do %>
    <%= form_tag '/sign_in' do %>
      <%= button_tag type: 'submit', class: 'btn-menu' do %>
        <%= t('sign_in') %>
      <% end %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="section white valign-wrapper">
      <div class="row container center-align">
        <h1><%= t('welcome') %></h1>
        <h3 class="grey-text text-darken-3"><%= t('welcome_sub') %></h3>
      </div>
    </div>
    <div class="parallax-container">
      <div class="parallax"><%= image_tag 'index_1.jpg' %></div>
    </div>
    <div class="section white valign-wrapper">
      <div class="row container">
        <div class="col s12 m6 l6 xl6">
          <p class="center-align"><i class="material-icons large">person</i></p>
          <h4 class="header"><%= t('index.about.user.title') %></h4>
          <p class="grey-text text-darken-3 lighten-3"><%= t('index.about.user.content') %></p>
        </div>
        <div class="col s12 m6 l6 xl6">
          <p class="center-align"><i class="material-icons large">memory</i></p>
          <h4 class="header"><%= t('index.about.developer.title') %></h4>
          <p class="grey-text text-darken-3 lighten-3"><%= t('index.about.developer.content_html', href: link_to(t('app_store'), t('app_store_link'))) %></p>
          <p class="grey-text text-darken-3 lighten-3"><%= t('index.about.developer.sub_content_html', href: link_to(t('proposal'), t('proposal_link'))) %></p>
        </div>
      </div>
    </div>
    <div class="parallax-container">
      <div class="parallax"><%= image_tag 'index_2.jpg' %></div>
    </div>
    <div class="section white valign-wrapper">
      <div class="row container center-align">
        <div class="center-align">
          <h2 class="grey-text text-darken-3 lighten-3"><%= t('index.ready_signin') %></h2>
        </div>
        <div class="col s12 m6 l4 xl4 offset-m3 offset-l4 offset-xl4">
          <%= form_tag '/sign_in' do %>
            <%= submit_tag t('sign_in'), class: 'waves-effect waves-light btn' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end -%>
